{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "rooms": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "required": ["!classroom", "id", "type", "name", "capacity"],
            "properties": {
              "!classroom": { "type": "null" },
              "id": { "type": "string" },
              "type": { "const": "Classroom" },
              "name": { "type": "string" },
              "capacity": { "type": "integer", "minimum": 1 }
            }
          },
          {
            "type": "object",
            "required": ["!computerlab", "id", "type", "name", "capacity", "computer_count"],
            "properties": {
              "!computerlab": { "type": "null" },
              "id": { "type": "string" },
              "type": { "const": "ComputerLab" },
              "name": { "type": "string" },
              "capacity": { "type": "integer", "minimum": 1 },
              "computer_count": { "type": "integer", "minimum": 1 }
            }
          }
          // ... other room types follow the same pattern
        ]
      }
    }
  },
  "required": ["rooms"]
}
